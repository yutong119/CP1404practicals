BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text:''
            on_text_validate: app.handle_update()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                on_press: app.up_or_down(1)
            Button:
                text: 'Down'
                on_press: app.up_or_down(-1)

    Button:
        text: 'Convert miles to km'
        on_press: app.calculate_data()

    Label:
        id: output_label
        text: ''


